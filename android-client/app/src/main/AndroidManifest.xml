<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.indoorpositioning"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_wips"
        android:roundIcon="@mipmap/icon_wips_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.Scan"
            android:label="Scan">

        </activity>
        <activity
            android:name=".Activity.Positions"
            android:label="Calibrate">

        </activity>
        <activity
            android:name=".Activity.Buildings"
            android:label="Buildings">

        </activity>
        <activity
            android:name=".Activity.StartingScreen"
            android:label="@string/app_name"
            android:theme="@style/AppThemeHome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".Activity.Locate"
            android:label="Locate">

        </activity>
        <activity
            android:name=".Activity.FriendlyWifis"
            android:label="Choose Friendly Wifis">

        </activity>
        <activity android:name=".BaseActivity" />

    </application>

</manifest>